<?xml version="1.0"?>

<!-- to run rviz - ros2 launch urdf_tutorial display.launch.py model:=/home/maksim/Templates/new_arm_ws/src/arduinobot_description/urdf/arduinobot.urdf.xacro  -->
<robot xmlns:xacro="https://www.ros.org/wiki/xacro" name="arduinobot">
    
    <!-- Variables -->
    <xacro:property name="PI" value="3.14159" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />

    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </xacro:macro>

    <link name="world" />

    <link name="base_link">
        <xacro:default_inertial mass="1.0" />
        <visual>
            <origin rpy="0 0 0"  xyz="-0.5 -0.5 0" />
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/basement.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0"  xyz="-0.5 -0.5 0" />
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/basement.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <link name="rgb_camera">
        <xacro:default_inertial mass="0.001" />
        <visual>
            <origin rpy="-${PI/2} 0 -${PI/2}" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/pi_camera.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="-${PI/2} 0 -${PI/2}" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/pi_camera.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
