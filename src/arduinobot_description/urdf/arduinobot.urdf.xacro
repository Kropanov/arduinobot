<?xml version="1.0"?>

<!-- to run rviz - ros2 launch urdf_tutorial display.launch.py model:=/home/maksim/Templates/new_arm_ws/src/arduinobot_description/urdf/arduinobot.urdf.xacro  -->
<robot xmlns:xacro="https://www.ros.org/wiki/xacro" name="arduinobot">
    
    <!-- Variables -->
    <xacro:property name="PI" value="3.14159" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />

    <link name="world" />

    <link name="base_link">
        <visual>
            <!-- Orientation and position only for mesh -->
            <origin rpy="0 0 0"  xyz="-0.5 -0.5 0" />
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/basement.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
    </link>

    <link name="base_plate">
        <visual>
            <origin rpy="0 0 0"  xyz="-0.39 -0.39 -0.56" />
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/base_plate.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
    </link>

    <link name="forward_drive_arm">
        <visual>
            <origin rpy="0 -${PI/2} ${PI/2}"  xyz="0.19 0.073 -0.079" />
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
    </link>

    <link name="horizontal_arm">
        <visual>
            <origin rpy="${PI/2} 0 ${PI/2}"  xyz="-0.03 -0.425 -0.073" />
            <geometry>
                <mesh filename="package://arduinobot_description/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
    </link>

    <!-- JOINTS STATE -->
    <!-- We linked two links - world with base link  -->
    <joint name="virtual_joint" type="fixed">
        <parent link="world" />
        <child link="base_link" />
        <!-- Orientation and position for joint  -->
        <origin rpy="0 0 0" xyz="0 0 0" />
    </joint>

    <joint name="joint_1" type="revolute">
        <parent link="base_link" />
        <child link="base_plate" />
        <axis xyz="0 0 1" />
        <origin rpy="0 0 0" xyz="0 0 0.307" />
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>

    <joint name="joint_2" type="revolute">
        <parent link="base_plate" />
        <child link="forward_drive_arm" />
        <axis xyz="1 0 0" />
        <origin rpy="0 0 0" xyz="-0.2 0.022 0.354" />
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>

    <joint name="joint_3" type="revolute">
        <parent link="forward_drive_arm" />
        <child link="horizontal_arm" />
        <axis xyz="1 0 0" />
        <origin rpy="0 0 0" xyz="0 0.02 0.793" />
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>
</robot>